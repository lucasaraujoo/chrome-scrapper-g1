{
    "manifest_version": 2,
    "name":    "G1 Resume News",
    "version": "1.0",
    "offline_enabled": true,
    "permissions": [
        "tabs",
        "activeTab"
      ],
    "content_scripts": [
        {
            "matches": [
                "https://g1.globo.com/"
            ],
            "js":     ["content.js"],
            "run_at": "document_end"
        }
    ],

    "browser_action": {
        "default_title": "G1 Resume News",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' https://kit.fontawesome.com; object-src 'self'"
}